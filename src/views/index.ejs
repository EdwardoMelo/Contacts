
<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">

        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
            <h1 class="text-center">Conntact List</h1>
            <p class="text-center lead">Hello, Welcome to your Contact List App, this is a very simple project in wich we used MongoDb Api to store our data and express framework to manage our http requests, you can start by Signing up, enjoy yourself!</p>

            <%- include('includes/messages'); %>
            
        <div class="responsive-table">
            <table class="table my-3">
                <% if (user) { %>
                    <% if (contatos.length < 1) { %>
                    <p class="text-center lead"> Your contact list is empty</p>
                   <% } %>
                    <% contatos.forEach(contato=>{ %>
                        <tr>
                            <td>
                                <%=contato.nome %>
                            </td>
                            <td>
                                <%=contato.sobrenome %>
                            </td>
                            <td>
                                <%=contato.email %>
                            </td>
                            <td>
                                <%=contato.telefone %>
                            </td>
                            <td><a href="/contato/index/<%=contato._id%>">Edit</a></td>
                            <td><a class="text-danger" href="/contato/delete/<%=contato._id %>">Delete</a></td>
                        </tr>
                        <% }); %>
                            <% } %>
            </table>
        </div>



        </div>



        <div class="col-lg-2"></div>

    </div>
</div>

<%- include('includes/footer'); %>